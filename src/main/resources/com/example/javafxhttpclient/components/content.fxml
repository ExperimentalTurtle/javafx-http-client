<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tab?>
<AnchorPane fx:id="anchorPane"
            fx:controller="com.example.javafxhttpclient.controllers.ContentController"
            xmlns:fx="http://javafx.com/fxml/1"
            style="-fx-background-color: green;"
            AnchorPane.topAnchor="35"
            AnchorPane.bottomAnchor="0"
            AnchorPane.rightAnchor="0"
            maxWidth="1650">

    <SplitPane fx:id="splitPane"
               AnchorPane.topAnchor="0"
               AnchorPane.leftAnchor="0"
               AnchorPane.rightAnchor="0"
               AnchorPane.bottomAnchor="0"
               dividerPositions="0.5">
        <AnchorPane>
            <GridPane fx:id="gridPane"
                      AnchorPane.topAnchor="0"
                      AnchorPane.leftAnchor="0"
                      AnchorPane.rightAnchor="0"
                      prefHeight="35"
                      style="-fx-background-color: yellow">

                <ComboBox fx:id="httpMethodsCombobox"
                          GridPane.columnIndex="0"
                          prefHeight="35.0"
                          prefWidth="100.0"/>

                <TextField fx:id="urlTextField"
                           GridPane.fillWidth="true"
                           GridPane.columnIndex="1"
                           promptText="https://example.com/api"
                           prefHeight="35.0"/>

                <Button fx:id="sendButton"
                        GridPane.columnIndex="2"
                        text="Send"
                        styleClass="send-button"
                        prefHeight="35.0"
                        prefWidth="80.0"/>
            </GridPane>
            <!--                                    style="-fx-background-color: fx-accent;-fx-text-fill:black;-fx-cursor: hand;"-->

            <TabPane AnchorPane.topAnchor="35"
                     AnchorPane.leftAnchor="0"
                     AnchorPane.rightAnchor="0"
                     prefHeight="300.0">
                <Tab closable="false" text="JSON"/>
                <Tab closable="false" text="Headers"/>
                <Tab closable="false" text="Query"/>
            </TabPane>
        </AnchorPane>

        <AnchorPane/>
    </SplitPane>
</AnchorPane>